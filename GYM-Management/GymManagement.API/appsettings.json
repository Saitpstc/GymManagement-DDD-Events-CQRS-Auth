    }
  },
  "AllowedHosts": "*",
  "AppOptions": {
    "ConnectionStrings": [
      {
        "Module": 1,
        "ConnectionString": "Server=213.142.151.220;Database=GYM.Customer;User ID=server1;Password=Main.Server.2248;Trust Server Certificate=true"
      },
      {
