          "tableName": "Logs",
          "autoCreateSqlTable": true,
          "columnOptionsSection": {
            "removeStandardColumns": [
              "MessageTemplate",
              "Properties"
            ],
            "additionalColumns": [
              {
                "ColumnName": "Username",
                "DataType": "nvarchar",
                "DataLength": 100
              },
              {
                "ColumnName": "Request",
                "DataType": "nvarchar",
                "DataLength": 2048
              },
              {
                "ColumnName": "Response",
                "DataType": "nvarchar",
                "DataLength": 2048
              },
              {
                "ColumnName": "StatusCode",
